{
  "name": "skill-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/skill-plugin/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/skill-plugin",
        "main": "tools/skill-plugin/src/index.ts",
        "tsConfig": "tools/skill-plugin/tsconfig.lib.json",
        "assets": [
          {
            "input": "./tools/skill-plugin/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/skill-plugin/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/skill-plugin",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/skill-plugin",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/skill-plugin/jest.config.ts"
      }
    }
  }
}
