{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "Skill",
  "title": "Create a new skill",
  "description": "Generates a new skill with SKILL.md template",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Skill name (kebab-case)",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the skill name? (kebab-case)"
    },
    "description": {
      "type": "string",
      "description": "Short description of the skill",
      "x-prompt": "Briefly describe what the skill does:"
    }
  },
  "required": [
    "name"
  ]
}