{
  "name": "@tech-leads-club/agent-skills-monorepo",
  "version": "0.0.0",
  "author": "Tech Leads Club",
  "license": "MIT",
  "private": true,
  "type": "module",
  "description": "AI agent skills CLI and toolkit",
  "workspaces": [
    "packages/*",
    "libs/*"
  ],
  "engines": {
    "node": ">=24"
  },
  "bugs": {
    "url": "https://github.com/tech-leads-club/agent-skills/issues"
  },
  "homepage": "https://github.com/tech-leads-club/agent-skills#readme",
  "scripts": {
    "build": "nx run-many -t build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate:skill": "nx g @tech-leads-club/skill-plugin:skill",
    "generate:data": "nx run-many -t generate-data --output-style=stream",
    "generate:registry": "nx run @tech-leads-club/skills-catalog:generate-registry",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run scan",
    "release": "npm run scan && nx release",
    "release:beta": "npm run scan && nx release --preid beta",
    "release:beta:dry": "nx release --preid beta --dry-run",
    "release:dry": "nx release --dry-run",
    "scan": "npx nx run @tech-leads-club/skills-catalog:security-scan",
    "validate": "npx tsx tools/validate-skills.ts --batch packages/skills-catalog/skills",
    "start:dev:cli": "npm run dev --workspace=@tech-leads-club/agent-skills",
    "start:dev:mcp": "npm run start:dev --workspace=@tech-leads-club/agent-skills-mcp",
    "release:vscode:package": "semantic-release --extends ./.github/release/vscode-extension/package.config.mjs",
    "release:vscode:publish": "semantic-release --extends ./.github/release/vscode-extension/publish.config.mjs",
    "start:dev": "npm run dev --workspace=@tech-leads-club/agent-skills",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' nx run-many -t test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tech-leads-club/agent-skills.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "agents",
    "ai",
    "antigravity",
    "claude-code",
    "cli",
    "copilot",
    "cursor",
    "opencode",
    "skills"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/inspector": "^0.21.0",
    "@nx/devkit": "^22.5.2",
    "@nx/esbuild": "^22.5.2",
    "@nx/eslint": "^22.5.2",
    "@nx/eslint-plugin": "^22.5.2",
    "@nx/jest": "22.5.2",
    "@nx/js": "^22.5.2",
    "@nx/next": "^22.5.2",
    "@nx/node": "^22.5.2",
    "@nx/plugin": "^22.5.2",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "1.15.13",
    "@swc/helpers": "~0.5.19",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "semantic-release": "^25.0.3",
    "semantic-release-stop-before-publish": "^2.0.0",
    "semantic-release-vsce": "^6.0.24",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/jest-axe": "^3.5.9",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-util": "^30.2.0",
    "jsonc-eslint-parser": "^2.4.2",
    "next": "~16.1.6",
    "nx": "^22.5.2",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "yaml": "^2.8.2"
  },
  "nx": {
    "includedScripts": []
  }
}