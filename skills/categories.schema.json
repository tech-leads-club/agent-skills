{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Categories",
  "description": "Schema for skill categories configuration",
  "type": "object",
  "required": ["categories", "skills"],
  "properties": {
    "categories": {
      "type": "array",
      "description": "List of available categories",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the category (kebab-case)",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "name": {
            "type": "string",
            "description": "Display name for the category"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the category"
          },
          "priority": {
            "type": "integer",
            "description": "Display order priority (lower = first)",
            "minimum": 0
          }
        }
      }
    },
    "skills": {
      "type": "object",
      "description": "Mapping of skill names to category IDs",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
