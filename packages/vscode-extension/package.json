{
  "name": "agent-skills",
  "displayName": "Agent Skills Manager",
  "description": "Discover, install, and manage AI agent skills directly within VS Code",
  "version": "0.0.1",
  "publisher": "tech-leads-club",
  "author": "Tech Leads Club",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tech-leads-club/agent-skills.git"
  },
  "type": "module",
  "main": "./dist/extension.js",
  "engines": {
    "node": ">=22",
    "vscode": "^1.96.0"
  },
  "activationEvents": [],
  "categories": [
    "Other"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agent-skills-sidebar",
          "title": "Agent Skills",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "agent-skills-sidebar": [
        {
          "type": "webview",
          "id": "agentSkillsSidebar",
          "name": "Skills Marketplace",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "agentSkills.openSettings",
        "title": "Agent Skills: Open Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "agentSkills.refresh",
        "title": "Agent Skills: Refresh Skills",
        "icon": "$(refresh)"
      },
      {
        "command": "agentSkills.add",
        "title": "Agent Skills: Add"
      },
      {
        "command": "agentSkills.remove",
        "title": "Agent Skills: Remove"
      },
      {
        "command": "agentSkills.update",
        "title": "Agent Skills: Update"
      },
      {
        "command": "agentSkills.repair",
        "title": "Agent Skills: Repair"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "agentSkills.openSettings",
          "when": "view == agentSkillsSidebar",
          "group": "navigation@2"
        },
        {
          "command": "agentSkills.refresh",
          "when": "view == agentSkillsSidebar",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Agent Skills",
      "properties": {
        "agentSkills.scopes.allowedScopes": {
          "type": "string",
          "enum": [
            "all",
            "global",
            "local",
            "none"
          ],
          "default": "all",
          "description": "Controls which scopes are allowed for skill installation and management. 'all' allows both local and global. 'global' restricts to global user scope. 'local' restricts to workspace scope. 'none' disables all lifecycle operations.",
          "scope": "window"
        }
      }
    }
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "In restricted mode, only marketplace browsing is available. Local skill installation is disabled."
    }
  },
  "scripts": {
    "build": "nx build",
    "build:webview": "nx build:webview",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:integration": "node ./scripts/run-integration-tests.mjs",
    "typecheck": "tsc --noEmit",
    "package": "nx package"
  },
  "devDependencies": {
    "@tech-leads-club/core": "0.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22",
    "@types/vscode": "^1.96.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vscode/test-electron": "^2.5.2",
    "fuse.js": "^7.1.0",
    "glob": "^10.5.0",
    "mocha": "^11.7.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  }
}