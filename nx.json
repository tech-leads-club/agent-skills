{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
  "nxCloudId": "69766724b12521140b82d456",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "start",
        "buildTargetName": "next:build",
        "devTargetName": "next:dev",
        "serveStaticTargetName": "serve-static",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "release": {
    "projectsRelationship": "independent",
    "groups": {
      "cli": {
        "projects": [
          "@tech-leads-club/agent-skills"
        ],
        "releaseTagPattern": "v{version}"
      },
      "skills-catalog": {
        "projects": [
          "@tech-leads-club/skills-catalog"
        ],
        "releaseTagPattern": "skills-catalog-v{version}"
      }
    },
    "version": {
      "conventionalCommits": true,
      "fallbackCurrentVersionResolver": "disk",
      "preVersionCommand": "npx nx run-many -t build --skip-nx-cache",
      "git": {
        "commit": true,
        "tag": true
      }
    },
    "conventionalCommits": {
      "types": {
        "perf": {
          "semverBump": "patch"
        },
        "docs": {
          "semverBump": "none"
        },
        "refactor": {
          "semverBump": "patch"
        },
        "chore": false,
        "test": false,
        "style": false,
        "build": false,
        "ci": false
      }
    },
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": {
        "createRelease": "github"
      },
      "workspaceChangelog": false,
      "git": {
        "commit": true,
        "tag": true
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "cache": true,
      "inputs": [
        "production",
        "^production"
      ]
    },
    "nx-release-publish": {
      "dependsOn": [
        "build"
      ],
      "options": {
        "packageRoot": "{projectRoot}/dist"
      },
      "inputs": [
        "production",
        "^production"
      ]
    },
    "test": {
      "cache": true,
      "inputs": [
        "default",
        "^production"
      ]
    },
    "eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "^production"
      ]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ]
    }
  },
  "defaultBase": "main"
}